generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  daletedAt DateTime?

  RefreshToken RefreshToken[]
  Todo         Todo[]

  @@map("users")
}

model RefreshToken {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId Int
  token  String

  @@map("refresh_tokens")
}

model Todo {
  id         Int     @id @default(autoincrement())
  content    String
  isComplete Boolean @default(false)
  user       User    @relation(fields: [userId], references: [id])
  userId     Int

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  daletedAt DateTime?

  @@map("todos")
}
